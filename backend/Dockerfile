FROM python:3.11-slim

WORKDIR /app

# 安装依赖
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 复制代码
COPY . .

# 创建上传目录
RUN mkdir -p uploads

# 暴露端口
EXPOSE 8000

# 启动命令（自动运行数据库迁移）
CMD ["sh", "-c", "echo 'DATABASE_URL: $DATABASE_URL' && alembic upgrade head && uvicorn app.main:app --host 0.0.0.0 --port 8000"]

