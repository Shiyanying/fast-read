{
  "designSystem": {
    "name": "ReadSmart Design System",
    "version": "1.0.0",
    "description": "极简主义英语阅读平台设计系统",
    
    "spacing": {
      "system": "4px base unit",
      "scale": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "2xl": "48px",
        "3xl": "64px"
      },
      "rules": [
        "所有间距必须是4px的倍数",
        "相关元素使用紧凑间距(4-8px)",
        "不同组使用更大间距(16-24px)",
        "触摸区域最小48x48px"
      ]
    },
    
    "colors": {
      "palette": {
        "primary": {
          "black": "#000000",
          "gray-900": "#1a1a1a",
          "gray-800": "#2d2d2d",
          "gray-700": "#4a4a4a"
        },
        "neutral": {
          "white": "#ffffff",
          "gray-50": "#fafafa",
          "gray-100": "#f5f5f5",
          "gray-200": "#e5e5e5",
          "gray-300": "#d4d4d4",
          "gray-400": "#a3a3a3",
          "gray-500": "#737373",
          "gray-600": "#525252"
        },
        "status": {
          "red-50": "#fef2f2",
          "red-700": "#b91c1c",
          "yellow-50": "#fefce8",
          "yellow-100": "#fef9c3",
          "yellow-200": "#fef08a",
          "yellow-700": "#a16207"
        }
      },
      "usage": {
        "background": "60% white/light gray",
        "surface": "30% white/medium gray",
        "accent": "10% charcoal black"
      },
      "contrast": "WCAG AA compliant (≥4.5:1)"
    },
    
    "typography": {
      "fontFamily": "-apple-system, BlinkMacSystemFont, 'SF Pro Text', 'Segoe UI', Roboto, sans-serif",
      "scale": {
        "h1": {
          "size": "36px",
          "weight": "700",
          "lineHeight": "1.2",
          "color": "#000000"
        },
        "h2": {
          "size": "28px",
          "weight": "600",
          "lineHeight": "1.3",
          "color": "#1a1a1a"
        },
        "h3": {
          "size": "20px",
          "weight": "600",
          "lineHeight": "1.4",
          "color": "#1a1a1a"
        },
        "body": {
          "size": "16px",
          "weight": "400",
          "lineHeight": "1.6",
          "color": "#1a1a1a"
        },
        "small": {
          "size": "14px",
          "weight": "400",
          "lineHeight": "1.5",
          "color": "#737373"
        },
        "caption": {
          "size": "12px",
          "weight": "400",
          "lineHeight": "1.4",
          "color": "#a3a3a3"
        }
      },
      "rules": [
        "标题与正文至少6-8px大小差异",
        "使用粗细和颜色创建层次",
        "行高为字体大小的1.2-1.6倍",
        "标题上下间距为行高的1.2倍"
      ]
    },
    
    "borders": {
      "radius": {
        "sm": "8px",
        "md": "12px",
        "lg": "16px",
        "xl": "20px",
        "2xl": "24px",
        "full": "9999px"
      },
      "width": {
        "thin": "1px",
        "medium": "2px"
      },
      "color": {
        "default": "rgba(0, 0, 0, 0.08)",
        "hover": "rgba(0, 0, 0, 0.12)",
        "focus": "#000000"
      }
    },
    
    "shadows": {
      "sm": "0 2px 8px rgba(0, 0, 0, 0.04), 0 1px 2px rgba(0, 0, 0, 0.06)",
      "md": "0 4px 12px rgba(0, 0, 0, 0.06), 0 2px 4px rgba(0, 0, 0, 0.08)",
      "lg": "0 8px 24px rgba(0, 0, 0, 0.08), 0 4px 8px rgba(0, 0, 0, 0.12)",
      "xl": "0 12px 32px rgba(0, 0, 0, 0.1), 0 6px 12px rgba(0, 0, 0, 0.14)"
    },
    
    "components": {
      "button": {
        "primary": {
          "background": "#000000",
          "color": "#ffffff",
          "padding": "12px 24px",
          "borderRadius": "12px",
          "fontSize": "14px",
          "fontWeight": "500",
          "minHeight": "48px"
        },
        "secondary": {
          "background": "#ffffff",
          "color": "#000000",
          "border": "1px solid #e5e5e5",
          "padding": "12px 24px",
          "borderRadius": "12px",
          "fontSize": "14px",
          "fontWeight": "500"
        },
        "icon": {
          "size": "40px",
          "borderRadius": "50%",
          "minTouch": "48x48px"
        }
      },
      "card": {
        "background": "#ffffff",
        "border": "1px solid rgba(0, 0, 0, 0.08)",
        "borderRadius": "16px",
        "padding": "24px",
        "shadow": "sm",
        "hover": {
          "transform": "translateY(-2px)",
          "shadow": "lg",
          "borderColor": "rgba(0, 0, 0, 0.12)"
        }
      },
      "input": {
        "background": "#ffffff",
        "border": "1px solid #e5e5e5",
        "borderRadius": "12px",
        "padding": "12px 16px",
        "fontSize": "14px",
        "focus": {
          "borderColor": "#000000",
          "ring": "2px solid rgba(0, 0, 0, 0.1)"
        }
      },
      "upload": {
        "area": {
          "border": "2px dashed #e5e5e5",
          "borderRadius": "12px",
          "padding": "32px 24px",
          "hover": {
            "borderColor": "#d4d4d4",
            "background": "rgba(0, 0, 0, 0.01)"
          }
        },
        "icon": {
          "size": "56px",
          "background": "#000000",
          "borderRadius": "50%"
        }
      }
    },
    
    "layout": {
      "container": {
        "maxWidth": "1400px",
        "padding": "32px",
        "mobilePadding": "16px"
      },
      "grid": {
        "columns": {
          "mobile": "1",
          "tablet": "2",
          "desktop": "3"
        },
        "gap": "24px"
      },
      "navigation": {
        "height": "64px",
        "mobileHeight": "56px",
        "sticky": true,
        "background": "rgba(255, 255, 255, 0.8)",
        "backdropBlur": true
      }
    },
    
    "interactions": {
      "transitions": {
        "duration": "0.2s",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "hover": {
        "transform": "translateY(-2px)",
        "shadow": "increase by one level"
      },
      "active": {
        "transform": "translateY(0)",
        "shadow": "decrease by one level"
      }
    },
    
    "responsive": {
      "breakpoints": {
        "mobile": "768px",
        "tablet": "1024px",
        "desktop": "1280px"
      },
      "rules": [
        "移动端优先设计",
        "触摸目标最小48x48px",
        "字体大小在移动端适当缩小",
        "间距在移动端减少25-30%"
      ]
    },
    
    "accessibility": {
      "contrast": "WCAG AA (≥4.5:1)",
      "touchTargets": "≥48x48px",
      "focusStates": "visible ring with 2px border",
      "keyboard": "all interactive elements accessible"
    }
  }
}

